<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="1300" MinHeight="700"
        Width="1300" Height="700"
        MaxWidth="1310" MaxHeight="710"
        WindowStartupLocation="CenterScreen"
        x:Class="MinesweeperClient.MainWindow"
        Title="Minesweeper" Background="#696969">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="30" Background="White">
            <MenuItem Header="Join"/>
            <MenuItem Header="Leave"/>
            <MenuItem Header="Reset" Click="OnResetClick"/>
            <MenuItem Header="Ready"/>
        </Menu>
        <StackPanel DockPanel.Dock="Left" Background="#696969" Width="200" Spacing="5" Margin="5">
            <Label Content="Players" Background="White" FontSize="20"/>
            <ListBox Name="PlayerListBox" Background="White"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Background="White" Height="30" Margin="5" DockPanel.Dock="Top">
            <Label Name="FlagsLeft"/>
        </StackPanel>
        <Grid Name="FieldGrid" Background="#808080" Margin="5" ShowGridLines="True"/>
    </DockPanel>
</Window>
