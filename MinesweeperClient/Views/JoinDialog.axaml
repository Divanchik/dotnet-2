<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="500" Height="300" CanResize="False"
        x:Class="MinesweeperClient.Views.JoinDialog"
        WindowStartupLocation="CenterOwner"
        Title="Join the server">
  <StackPanel Spacing="10" Margin="5" VerticalAlignment="Center">
    <TextBox Name="NickTextBox" Width="300" Watermark="Nickname" />
    <TextBox Name="ServTextBox" Width="300" Watermark="Server address" />
    <Button Content="Join" HorizontalAlignment="Center" Width="70" HorizontalContentAlignment="Center" Click="OnJoinClick" />
  </StackPanel>
</Window>
